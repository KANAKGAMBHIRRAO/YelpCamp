    <nav
      class="navbar navbar-expand-lg sticky-top bg-body-tertiary navbar-dark"
    >
      <div class="container-fluid">
        <div class="space">
          <i class="fa-solid fa-campground uplift"></i>
          <a href="#" class="logo">CampGrounds</a>
        </div>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto navigation">
            <% if(!currentUser){ %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <% }else{ %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <section class="parallax">
      <a href="/campgrounds">
        <h1 id="text">YelpCamp</h1>
      </a>

      <img src="images/monutain_01.png" alt="" id="m1" />
      <img src="images/trees_02.png" alt="" id="t2" />
      <img src="images/monutain_02.png" alt="" id="m2" />
      <img src="images/trees_01.png" alt="" id="t1" />
      <img src="images/man.png" alt="" id="man" />
      <img src="images/plants.png" alt="" id="plants" />
    </section>

    <section class="sec">
      <div class="container">
        <h2>Ignite Your Curiosity: Uncover the Wonders of 4 Features!</h2>

        <div class="content">
          <div class="card">
            <div class="card-content">
              <div class="name-details">
                <span class="name">Create</span>
                <div class="details">
                  Found a hidden gem of a campground? Share your secret spot and
                  invite others to explore its beauty!
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-content">
              <div class="name-details">
                <span class="name">Edit</span>
                <div class="details">
                  Need to fix a mistake or update your campground's details? No
                  worries, you can easily edit your campground information!
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-content">
              <div class="name-details">
                <span class="name">Delete</span>
                <div class="details">
                  Campground no longer operational? No problem! You can delete
                  it hassle-free
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-content">
              <div class="name-details">
                <span class="name">Review</span>
                <div class="details">
                  Enjoyed or had a bad experience at a campground? Share your
                  thoughts to help others prepare by leaving reviews on
                  campgrounds.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <img src="plants.png" alt="" id="plants2" />
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script>
      gsap.from("#m1", {
        scrollTrigger: {
          scrub: true,
        },
        y: 100,
      });
      gsap.from("#m2", {
        scrollTrigger: {
          scrub: true,
        },
        y: 50,
      });
      gsap.from("#t2", {
        scrollTrigger: {
          scrub: true,
        },
        x: -50,
      });
      gsap.from("#t1", {
        scrollTrigger: {
          scrub: true,
        },
        x: 50,
      });
      gsap.from("#man", {
        scrollTrigger: {
          scrub: true,
        },
        x: -250,
      });
      gsap.from("#plants", {
        scrollTrigger: {
          scrub: true,
        },
        x: -50,
      });

      gsap.from("#text", {
        scrollTrigger: {
          scrub: true,
        },
        y: -100,
      });
    </script>
  </body>
</html>
